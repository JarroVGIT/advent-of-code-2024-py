{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AoC Example",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--example"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/utils"
            }
        },
        {
            "name": "AoC Input",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--input"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/utils"
            }
        }
    ]
}